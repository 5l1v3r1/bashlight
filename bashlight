#!/bin/sh

####################################################################################
# Bashlight 	: 0.1.5
# Copyright		: 2018, MIT
# Author		: Andr√© Lademann <vergissberlin@googlemail.com>
# Repository	: https://github.com/vergissberlin/bashlight
####################################################################################

# Your settings here
if [ -z "${PATH_BASHLIGHT}" ]; then
	PATH_BASHLIGHT="${HOME}/bashlight"
fi

# Check update
. ${PATH_BASHLIGHT}/update.sh ${PATH_BASHLIGHT}

####################################################################################
# Include modules
####################################################################################

# Alias definitions.
# You may want to put all your additions into a separate file like
# ~/src/aliases, instead of adding them here directly.
[ -f "${PATH_BASHLIGHT}/src/aliases.bash"  ] && { . "${PATH_BASHLIGHT}/src/aliases.bash"; }
[ -f "${PATH_BASHLIGHT}/src/logout.bash"   ] && { . "${PATH_BASHLIGHT}/src/logout.bash"; }
[ -f "${PATH_BASHLIGHT}/src/notify.bash"   ] && { . "${PATH_BASHLIGHT}/src/notify.bash"; }
[ -f "${PATH_BASHLIGHT}/src/settings.bash" ] && { . "${PATH_BASHLIGHT}/src/settings.bash"; }
[ -f "${PATH_BASHLIGHT}/src/prompt.bash"   ] && { . "${PATH_BASHLIGHT}/src/prompt.bash"; }

# enable programmable completion features
if ! shopt -oq posix; then
	if [ -f /usr/share/bash-completion/bash_completion ]; then
		. /usr/share/bash-completion/bash_completion
	fi
fi
